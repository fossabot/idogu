<%= form_for(@user) do |f| %>
    <%= raw render_error @user %>
    <div class="field">
        <%= f.label :user_name %><br />
        <%= f.text_field :user_name %>
    </div>
    <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password %>
    </div>
    <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>
