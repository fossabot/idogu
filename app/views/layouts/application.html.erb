<!DOCTYPE html>
<html>
<head>
  <title>Idogu</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags  %>
</head>
<body>
    
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<div id="user_nav">
    <% if person_signed_in? %>
      Signed in as <%= current_person.email %>. Not you ?
      <%= link_to "Sign out", destroy_person_session_path, :method => :delete %>
    <% else %>
      <%= link_to "Sign up", new_person_registration_path %> or <%= link_to "Sign in", new_person_session_path %>
    <% end %>
</div>           
           
<ul>
  <li><%= link_to 'Users', users_path %></li>
  <li><%= link_to 'Groups', groups_path %></li>
  <li><%= link_to 'Profiles', profiles_path %></li>
  <li><%= link_to 'Walls', walls_path %></li>
  <li><%= link_to 'Assets', attachments_path %></li>
</ul>
<%= yield %>

</body>
</html>
