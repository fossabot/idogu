<h1>Listing walls</h1>

<table>
  <tr>
    <th>User</th>
    <th>Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @walls.each do |wall| %>
  <tr>
    <td><%= wall.user.user_name %></td>
    <td><%= wall.message %></td>
    <td><%= link_to 'Show', wall %></td>
    <td><%= link_to 'Edit', edit_wall_path(wall) %></td>
    <td><%= link_to 'Destroy', wall, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

